<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="JoinDao">
	
	<!-- result = session.insert("JoinProcess", memberinfo); -->
	<insert id="JoinProcess" parameterType="memberinfo">
		insert into memberinfo values (#{id}, #{password}, #{nickname}, 30000000, sysdate, sysdate, 0)
	</insert>
	
	<!-- MemberInfo memberInfo = session.selectOne("IDchk", id); -->
	<select id="IDchk" parameterType="memberinfo" resultType="memberinfo">
		select *
		from memberinfo
		where id = #{id}
	</select>
	
	<!-- memberInfo = session.selectOne("chkNickname", nickname); -->
	<select id="chkNickname" parameterType="memberinfo" resultType="memberinfo">
		select *
		from memberinfo
		where nickname = #{nickname}
	</select>
	
	<!-- MemberInfo getmemberinfo = session.selectOne("LoginChk", memberinfo); -->
	<select id="LoginChk" parameterType="memberinfo" resultType="memberinfo">
		select *
		from memberinfo
		where id = #{id}
		and password = #{password}
	</select>
	
	<!-- result = session.selectOne("FindPasswordProcess", memberinfo); -->
	<select id="FindPasswordProcess" parameterType="memberinfo" resultType="int">
		select count(*)
		from memberinfo
		where id = #{id}
		and nickname = #{nickname}
	</select>
	
	<!-- session.update("tempPw", memberinfo2); -->
	<update id="tempPw" parameterType="memberinfo">
		update memberinfo
		set password = #{password}
		where id = #{id}
	</update>
	
	<!-- memberkrw = session.selectList("memberkrw", id); -->
	<select id="memberkrw" parameterType="java.lang.String" resultType="MemberInfo">
		select krw from memberinfo where id=#{id} 
	</select>
	
	<!-- coinstatus = session.selectList("coinstatus", id); -->
	<select id="coinstatus" parameterType="java.lang.String" resultType="CoinCoinInfo">
		select c.*, ci.coinname from coin c inner join coininfo ci on c.coincode=ci.coincode where id=#{id} order by c.coincode asc
	</select>
	
	<!-- int result = session.selectOne("totpriceStatus", id); -->
	<select id="totpriceStatus" parameterType="java.lang.String" resultType="int">
		select nvl(sum(tot_price), 0) from coin where id=#{id}
	</select>
	
	<!-- List<MemberInfo> memberid = session.selectList("memberid"); -->
	<select id="memberid" resultType='MemberInfo'>
		select * from memberinfo
	</select>


	
</mapper>
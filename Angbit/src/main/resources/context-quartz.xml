<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<bean id="checkJob" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="InvestService"></property>
		<property name="targetMethod" ref="checkBuyLimits"></property>
		<property name="concurrent" value="false"></property>
	</bean>
	<bean id="checkTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean ="checkJob"></ref>
		</property>
		<property name="cronExpression" value="0/5 0 ***?"></property>
	</bean>
	<bean id="checkScheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
		<list><ref bean="checkTrigger"/></list>	
		</property>
	</bean>
</beans>